<build>
    <plugins>
        <plugins>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-jar-plugin</artifactId>
            <version>3.2.0</version>
            <configuration>
                <archive>
                    <manifest>
                        <addClasspath>true</addClasspath>
                        <classpathPrefix>lib/</classpathPrefix>
                        <mainClass>main.java.mylib</mainClass>
                    </manifest>
                </archive>
            </configuration>
        </plugins>
    </plugins>
</build>